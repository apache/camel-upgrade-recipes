                                    <groupId>org.apache.camel</groupId>
                                    <artifactId>camel-http</artifactId>
                                    <version>${camel4.12-version}</version>
                                    <outputDirectory>${rewrite-tmp-classpath}</outputDirectory>
                                </artifactItem>
