                                    <version>6.0.0</version>
                                    <outputDirectory>${rewrite-tmp-classpath}</outputDirectory>
                                </artifactItem>

                                <!-- JAXB -->
                                <artifactItem>
                                    <groupId>javax.xml.bind</groupId>
